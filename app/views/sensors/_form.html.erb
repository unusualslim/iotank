<%= form_with model: @sensor, local: true do |form| %>
  <% if @sensor.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@sensor.errors.count, "error") %> prohibited
        this Sensor from being saved:
      </h2>
      <ul>
        <% @sensor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
   <p>
    <%= form.label :external_id %>
    <%= form.text_field :external_id %>
   </p>
   <p>
    <%= form.label :location %>
    <%= form.collection_select :location_id, Location.all, :id, :name, prompt: true %>
   </p>
  <p>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

